<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true" tools:context=".MainActivity">
   <androidx.cardview.widget.CardView
       android:id="@+id/card_view"
       app:cardCornerRadius="10dp"
       android:layout_marginBottom="40dp"
       app:layout_constraintBottom_toTopOf="@id/container"
       android:layout_marginHorizontal="16dp"
       app:cardBackgroundColor="@color/red"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

         <ImageView
             android:layout_marginTop="30dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_width="200dp"
             android:src="@drawable/ic_eifel"
             android:layout_height="200dp"
             app:tint="@color/white"/>
         <TextView
             android:layout_marginEnd="20dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:textColor="@color/white"
             android:textSize="34sp"
             android:text="France\nParis"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

      </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.cardview.widget.CardView>
   <LinearLayout
       android:id="@+id/container"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="match_parent"
       android:gravity="center"
       android:layout_height="wrap_content">

      <Button
          android:id="@+id/buttonOne"
          android:background="@drawable/bg_button"
          android:text="Button 1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <com.google.android.material.button.MaterialButton
          android:layout_marginHorizontal="16dp"
          android:text="Circle"
          android:id="@+id/btn_circle"
          android:insetTop="0dp"
          android:insetBottom="0dp"
          app:cornerRadius="200dp"
          app:backgroundTint="@color/red"
          android:layout_width="100dp"
          android:layout_height="100dp"/>
      <androidx.appcompat.widget.AppCompatButton
          android:text="Button 3"
          android:drawablePadding="10dp"

          android:drawableTint="@color/white"
          android:drawableStart="@drawable/ic_car"
          android:textColor="@color/white"
          android:backgroundTint="@color/black"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
   </LinearLayout>


   <EditText android:id="@+id/edit_text"
       android:layout_marginHorizontal="16dp"
       android:textSize="24sp"
       android:hint="Введите текст"
       app:layout_constraintBottom_toTopOf="@id/big_button"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

   <com.google.android.material.button.MaterialButton
       android:layout_width="match_parent"
       android:textSize="24sp"
       app:cornerRadius="10dp"
       app:icon="@drawable/ic_car"
       android:id="@+id/big_button"
       app:iconGravity="textStart"
       android:paddingVertical="12dp"
       android:layout_margin="16dp"
       android:text="Big button"
       app:backgroundTint="@color/red"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>


    
